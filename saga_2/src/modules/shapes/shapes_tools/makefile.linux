$(MLB_TEMP)/ShapeSearchSelector.o: ./ShapeSearchSelector.cpp $(MLB_TEMP)
	$(CPP) -c ./ShapeSearchSelector.cpp -o $(MLB_TEMP)/ShapeSearchSelector.o $(CXXFLAGS)

$(MLB_TEMP)/ShapeSelector.o: ./ShapeSelector.cpp $(MLB_TEMP)
