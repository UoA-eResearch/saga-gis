	$(CPP) -c ./SelectByTheme.cpp -o $(MLB_TEMP)/SelectByTheme.o $(CXXFLAGS)

$(MLB_TEMP)/SeparateShapes.o: ./SeparateShapes.cpp $(MLB_TEMP)
